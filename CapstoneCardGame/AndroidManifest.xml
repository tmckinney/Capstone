        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.wcu.cs.cs495.capstonecardgame.activities.CardGameSplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wcu.cs.cs495.capstonecardgame.activities.CardGame"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="edu.wcu.cs.cs495.capstonecardgame.activities.CardGameMenu" >
        </activity>
        <activity
            android:name="edu.wcu.cs.cs495.capstonecardgame.activities.LoginScreen"
            android:label="@string/title_activity_login_screen" >
        </activity>
        <activity
            android:name="edu.wcu.cs.cs495.capstonecardgame.activities.CreateAccount"
            android:label="@string/title_activity_create_account" >
        </activity>
    </application>

</manifest>